rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is accessing their own document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'ADMIN';
    }

    // Helper function to check if user is admin or manager
    function isManagerOrAdmin() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        (
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'ADMIN' || 
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'MANAGER'
        );
    }

    // Users collection rules
    match /users/{userId} {
      // Allow any authenticated user to read all profiles (for team lists, assignees, etc)
      allow read: if isAuthenticated();
      // Users can write their own profile, Admins can write any
      allow write: if isOwner(userId) || isAdmin();
      
      // Allow creation of new user profile if user is authenticated and ID matches
      allow create: if isAuthenticated() && request.auth.uid == userId;
    }

    // Member Profiles (for Team Availability)
    match /member_profiles/{userId} {
      // Everyone can read availability
      allow read: if isAuthenticated();
      // Only Admins and Managers can edit/create availability profiles
      // Allow owners to update their status (online/offline)
      allow write: if isManagerOrAdmin() || isOwner(userId);
    }

    // Work Logs (for Reporting)
    match /work_logs/{logId} {
      // Users can read/write their own logs, Admins/Managers can read all
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && (resource.data.userId == request.auth.uid || isManagerOrAdmin());
    }

    // Fix Requests collection rules
    match /fix_requests/{requestId} {
      // Anyone authenticated can read, create, update, delete requests
      // In a real app we might refine this, but for now "everyone to be able to request a fix"
      allow read, write: if isAuthenticated();
    }

    // Tracker Logs (for Web Tracker)
    match /tracker_logs/{logId} {
      // Users can read their own logs, Admins/Managers can read all
      allow read: if isAuthenticated() && (resource.data.userId == request.auth.uid || isManagerOrAdmin());
      
      // Users can create logs for themselves, Admins/Managers can create for any user (remote capture)
      allow create: if isAuthenticated() && 
        (request.resource.data.userId == request.auth.uid || isManagerOrAdmin());
      
      // Admins/Managers can delete (individual or bulk cleanup)
      allow delete: if isManagerOrAdmin();
    }

    // Meetings collection rules
    match /meetings/{meetingId} {
      allow read, write: if isAuthenticated();
    }

    // Activity Logs (for Web Tracker - mouse movements, clicks, keystrokes)
    match /activity_logs/{logId} {
      // Users can read their own activity logs, Admins/Managers can read all
      allow read: if isAuthenticated() && (resource.data.userId == request.auth.uid || isManagerOrAdmin());
      
      // Users can create activity logs for themselves
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // Only Admins/Managers can delete (for cleanup)
      allow delete: if isManagerOrAdmin();
    }

    // Tasks collection rules
    match /tasks/{taskId} {
      // Admins/Managers can read all tasks; others can read their own or tasks they requested
      allow read: if isManagerOrAdmin() || 
        (isAuthenticated() && resource.data.createdBy == request.auth.uid) ||
        (isAuthenticated() && resource.data.requestedByUserId == request.auth.uid);
      // Anyone authenticated can create tasks
      allow create: if isAuthenticated();
      // Admins/Managers can update/delete any task
      // Task owners can update/delete tasks they created
      // Requesters can update/delete tasks they requested (for deletion approval flow)
      allow update, delete: if isManagerOrAdmin() || 
        (isAuthenticated() && resource.data.createdBy == request.auth.uid) ||
        (isAuthenticated() && resource.data.requestedByUserId == request.auth.uid);

      // Subtasks subcollection
      match /subtasks/{subtaskId} {
        // Readable if user can read the parent task
        allow read: if isManagerOrAdmin() || 
          (isAuthenticated() && get(/databases/$(database)/documents/tasks/$(taskId)).data.createdBy == request.auth.uid) ||
          (isAuthenticated() && get(/databases/$(database)/documents/tasks/$(taskId)).data.requestedByUserId == request.auth.uid);
        allow create: if isAuthenticated();
        // Admins/Managers can update/delete any subtask
        // Task owners or requesters can modify subtasks
        allow update, delete: if isManagerOrAdmin() || 
          (isAuthenticated() && get(/databases/$(database)/documents/tasks/$(taskId)).data.createdBy == request.auth.uid) ||
          (isAuthenticated() && get(/databases/$(database)/documents/tasks/$(taskId)).data.requestedByUserId == request.auth.uid);
      }
    }

    // Capture Commands (remote capture triggers from web â†’ desktop app)
    match /capture_commands/{commandId} {
      // Users can read their own capture commands (desktop app polls these)
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Managers/Admins can create capture commands for any user
      allow create: if isManagerOrAdmin();
      
      // Users can update their own commands (mark as completed), Managers can also update
      allow update: if isAuthenticated() && (resource.data.userId == request.auth.uid || isManagerOrAdmin());
      
      // Managers/Admins can delete commands
      allow delete: if isManagerOrAdmin();
    }

    // Task Requests (request-to-add-task between team members)
    match /task_requests/{requestId} {
      // Users can read requests they sent or received
      allow read: if isAuthenticated() && 
        (resource.data.fromUserId == request.auth.uid || resource.data.toUserId == request.auth.uid);
      // Any authenticated user can create a task request
      allow create: if isAuthenticated();
      // Sender or recipient can update (accept/reject)
      allow update: if isAuthenticated() && 
        (resource.data.fromUserId == request.auth.uid || resource.data.toUserId == request.auth.uid);
      // Sender or recipient can delete, admins too
      allow delete: if isAuthenticated() && 
        (resource.data.fromUserId == request.auth.uid || resource.data.toUserId == request.auth.uid || isManagerOrAdmin());
    }

    // Chat Messages (direct messages between team members)
    match /chat_messages/{messageId} {
      // Participants can read messages in their conversation
      allow read: if isAuthenticated() && 
        request.auth.uid in resource.data.participants;
      // Any authenticated user can create a message (sender must be in participants)
      allow create: if isAuthenticated() && 
        request.auth.uid in request.resource.data.participants;
      // Only sender can delete their own messages
      allow delete: if isAuthenticated() && 
        resource.data.senderId == request.auth.uid;
    }
  }
}
